{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "logResults",
  "type": "object",
  "properties": {
    "cqlengine": {
      "type": "object",
      "properties": {
        "apiUrl": { "type": "string" },
        "description": { "type": "string" },
        "cqlVersion": { "type": "string" },
        "cqlTranslator": { "type": "string" },
        "cqlTranslatorVersion": { "type": "string" },
        "cqlEngine": { "type": "string" },
        "cqlEngineVersion": { "type": "string" }
      },
      "required": ["apiUrl"]
    },
    "testResultsSummary": {
      "type": "object",
      "properties": {
        "passCount": { "type": "integer" },
        "skipCount": { "type": "integer" },
        "failCount": { "type": "integer" },
        "errorCount": { "type": "integer" },
        "testRunDescription": {"type":  "string"}
      },
      "required": ["passCount", "skipCount", "failCount", "errorCount"]
    },
    "testsRunDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "testStatus": {
            "type": "string",
            "enum": ["pass", "fail", "skip", "error"]
          },
          "responseStatus": {
            "type": "integer"
          },
          "actual": {
            "type": "string"
          },
          "expected": {
            "type": "string"
          },
          "error": {
            "type": "object",
            "properties": {
              "message": { "type": "string" },
              "name": { "type": "string" },
              "stack": { "type": "string" }
            },
            "required": ["message"]
          },
          "testsName": {
            "type": "string"
          },
          "groupName": {
            "type": "string"
          },
          "testName": {
            "type": "string"
          },
          "invalid": {
            "type": "string",
            "enum": ["true", "false", "semantic"]
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "code":   { "type": "string" },
                "value":  {
                  "anyOf": [
                    { "type": "boolean" },
                    { "type": "string" },
                    { "type": "number" },
                    { "type": "object" },
                    { "type": "array" }
                  ]
                },
                "system":  { "type": "string" },
                "display": { "type": "string" },
                "version": { "type": "string" }
              },
              "required": ["code"]
            }
          },
          "expression": {
            "type": "string"
          }
        },
        "required": ["testsName", "groupName", "testName", "expression"]
      }
    }
  },
  "required": ["cqlengine", "testResultsSummary", "testsRunDateTime", "results"]
}
